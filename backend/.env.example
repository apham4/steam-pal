# Steam Pal Backend Configuration
# Copy this file to .env and fill in your actual values

# Security Configuration 
# Generate a strong secret key for JWT tokens
# Run: python -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=your-generated-secret-jwt-key

# Steam API Configuration
# Get your Steam Web API Key from: https://steamcommunity.com/dev/apikey
STEAM_API_KEY=your-steam-web-api-key

# Frontend URL (for CORS and redirects)
FRONTEND_URL=http://localhost:5173

# Frontend Auth Callback URL
FRONTEND_AUTH_CALLBACK_URL=http://localhost:5173/auth-callback.html

# Steam OAuth Configuration
# Steam OpenID endpoint
STEAM_OPENID_URL=https://steamcommunity.com/openid/login

# JWT Token Configuration
JWT_ALGORITHM=HS256 # Token algorithm
JWT_EXPIRATION_HOURS=24 # Token expiration time (hours)

# API Configuration
API_TIMEOUT_SECONDS=10 # Timeout for API calls (seconds)